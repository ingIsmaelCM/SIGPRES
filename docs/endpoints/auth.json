{
  "openapi": "3.0.3",
  "info": {
    "title": "Authentication",
    "description": "Manage register and authentications for user",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3001/api/auth"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "summary": "Login on system",
        "operationId": "login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthLogin"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Data of authenticated user"
          },
          "422": {
            "description": "Error data validdation"
          },
          "401": {
            "description": "Error authentication"
          }
        }
      }
    },
    "/register": {
      "post": {
        "summary": "Create a new user",
        "operationId": "register",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthRegister"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Data of user created"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AuthLogin": {
        "type": "object",
        "required": [
          "username",
          "password"
        ],
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string",
            "minimum": 6,
            "maximum": 25
          }
        }
      },
      "AuthRegister": {
        "type": "object",
        "required": [
          "username",
          "password",
          "email",
          "name",
          "lastname"
        ],
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string",
            "minimum": 6,
            "maximum": 25
          },
          "email": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "lastname": {
            "type": "string"
          }
        }
      }
    }
  }
}
