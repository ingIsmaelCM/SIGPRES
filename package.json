    "test": "npm run migrate && cross-env NODE_ENV=test  jest --testTimeout=35000 --coverage ",
    "dev": "cross-env NODE_ENV=dev nodemon App.ts",
    "migrate:test": "cross-env NODE_ENV=test ts-node ./tests/init.ts",
    "migrate": "ts-node ./src/app/db/Migration.ts",
    "seed": "ts-node ./src/app/db/Seed.ts",
    "build": "npx tsc && xcopy /E /I public dist\\public && xcopy /E /I views dist\\views && copy package.json dist",
    "docker:build": "docker build -t turn .",
    "docker:run": "docker run -p 3001:3001 -v ./:/usr/node/app turn",
    "docker:stop-all": "docker stop $(docker ps -q)"
  },
  "_moduleAliases": {
    "@": "src",
    "@app": "src/app",
    "@auth": "src/auth",
    "@file": "src/file"
